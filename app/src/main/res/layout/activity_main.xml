<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="34dp"
        android:backgroundTint="#E61616"
        android:gravity="center"
        android:text="Hello Kushagra"
        android:textColor="#0A0E55"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/enter_password"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:ems="10"
        android:gravity="center"
        android:hint="enter string to be reversed"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/reverse"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:onClick="reverse1"
        android:text="Proceed"
        android:textColor="#0F2B8E"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_password"
        app:layout_constraintVertical_bias="0.101" />

    <TextView
        android:id="@+id/reversed_string"
        android:layout_width="275dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:hint="@string/init_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reverse"
        app:layout_constraintVertical_bias="0.119" />

    <Button
        android:id="@+id/home_1_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="home_click_1"
        android:text="Next Page"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reversed_string"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/home_2_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="home_click_2"
        android:text="Other Services"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_1_click"
        app:layout_constraintVertical_bias="0.331" />

    <Button
        android:id="@+id/buy_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="BuyFruit"
        android:text="buy fruit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_2_click" />

</androidx.constraintlayout.widget.ConstraintLayout>